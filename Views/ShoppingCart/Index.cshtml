@model List<ASPProject.Models.ShoppingCart>
<body style="background-color: #9ab39a;">
    <div class="container my-5">
        <h2 class="text-center mb-4">Your Shopping Cart</h2>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card d-flex flex-row" style="blur(10px); box-shadow: 0 4px 10px black">
                        <!-- Book Cover on the Left -->
                        <img src="@item.Book.ImageUrl" alt="@item.Book.Title" class="card-img-left" style="width: 150px; height: 225px; object-fit: cover;">
                        
                        <!-- Book Info on the Right -->
                        <div class="card-body d-flex flex-column justify-content-center">
                            <h5 class="card-title">@item.Book.Title</h5>
                            <p class="card-text">Author: @item.Book.Author</p>
                            <p class="card-text">Price: $@item.Book.Price</p>
                            <p class="card-text">Quantity: @item.Quantity</p>
                            
                            <!-- Delete Button -->
                            <form action="@Url.Action("RemoveFromCart", "ShoppingCart", new { bookId = item.BookId })" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Continue Shopping Button -->
        <div class="text-center mt-4">
            <form action="@Url.Action("MyView", "Home")" method="get">
                <button type="submit" class="btn btn-primary">Continue Shopping</button>
            </form>
        </div>
    </div>
</body>
